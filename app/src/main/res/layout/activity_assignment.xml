<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Assignment"
    android:background="@color/grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingLeft="20dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="33dp"
            android:src="@drawable/logo_cp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tugas"
            android:paddingLeft="15dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/purple"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="18dp">

        <TextView
            android:id="@+id/undoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum Selesai"
            android:fontFamily="@font/montserrat_bold"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/purple"
            />

        <TextView
            android:id="@+id/doneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah Selesai"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center_horizontal"
            android:textColor="@color/purple"
            />
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:background="@drawable/button3"
        android:orientation="vertical"
        android:layout_gravity="bottom">
        
        <ListView
            android:id="@+id/listAssignment"
            android:layout_width="match_parent"
            android:layout_height="595dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="560dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/border_grey"
                >
                <ImageButton
                    android:id="@+id/assignmentButtonAssignment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/list"
                    android:layout_marginTop="15dp"
                    style="@style/ImageButtonNoBackground"/>
                <ImageButton
                    android:id="@+id/moneyButtonAssignment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/babi"
                    android:layout_marginTop="15dp"
                    style="@style/ImageButtonNoBackground"/>
                <ImageButton
                    android:id="@+id/addAssignmentImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/plus"
                    android:layout_marginBottom="10dp"
                    style="@style/ImageButtonNoBackground"/>
                <ImageButton
                    android:id="@+id/scheduleButtonAssignment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/calendar_button"
                    android:layout_marginTop="15dp"
                    style="@style/ImageButtonNoBackground"/>
                <ImageButton
                    android:id="@+id/profileButtonAssignment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/profile"
                    android:layout_marginTop="15dp"
                    style="@style/ImageButtonNoBackground"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>