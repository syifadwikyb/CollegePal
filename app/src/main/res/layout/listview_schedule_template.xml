<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/button_lightgreen"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:padding="10dp"
    >

    <LinearLayout
        android:id="@+id/scheduleDeleteArea1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dayScheduleListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Senin"
            android:textColor="@color/purple"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/subjectScheduleListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_bold"
            android:text="Praktikum Sisdig"
            android:maxLength="18"
            android:textColor="@color/purple"
            android:textSize="15dp"
            android:paddingTop="5dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/scheduleDeleteArea2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/startTimeScheduleListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15.30"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/purple"
            android:layout_centerVertical="true"
            android:textAlignment="textEnd"
            android:layout_marginLeft="22dp"
            android:paddingLeft="30dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_centerVertical="true"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/purple"
            android:layout_marginLeft="90dp"
            android:gravity="center">
        </TextView>

        <TextView
            android:id="@+id/finishTimeScheduleListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17.30"
            android:textSize="12sp"
            android:textAlignment="textStart"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/purple"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:paddingRight="10dp">
        </TextView>

        <ImageButton
            android:id="@+id/editSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit_new"
            android:padding="10dp"
            android:layout_marginLeft="150dp"
            style="@style/ImageButtonNoBackground"/>
    </RelativeLayout>

</LinearLayout>